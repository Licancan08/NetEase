<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@android:color/black">
        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/t3"/>
        <TextView
            android:id="@+id/qq_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即登录"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="赢积分 抢大礼"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="#ff0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@drawable/yanjing"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@drawable/xingxing"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@drawable/qianbi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"
                android:text="阅读"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"
                android:text="收藏"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"
                android:text="跟帖"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="80dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/che"
            android:layout_height="50dp"
            android:text=" 商城" />
        <TextView
            android:id="@+id/textView7"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:text="能赚能花,土豪当家!" />

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="80dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/bi"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_height="60dp"
            android:text=" 活动" />
        <TextView
            android:id="@+id/textView8"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:text="大人,这时你的SSR吗?" />
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/textVie1"
            android:layout_width="80dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textSize="15sp"
            android:drawableLeft="@drawable/you"
            android:textColor="#000"
            android:layout_height="60dp"
            android:text="游戏" />
        <TextView
            android:id="@+id/textVie2"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:text="部落冲突:皇室战争来袭" />
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"/>


    <View
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:background="#cfcfcf"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/textView10"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:drawableTop="@drawable/ren"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="上头条" />
        <TextView
            android:id="@+id/textVie11"
            android:gravity="center"
            android:textSize="10sp"
            android:drawableTop="@drawable/xiao"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="消息" />
        <TextView
            android:id="@+id/textVie3"
            android:textSize="10sp"
            android:drawableTop="@drawable/youjian"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="邮件" />
        <TextView
            android:id="@+id/textVie4"
            android:layout_weight="1"
            android:textSize="10sp"
            android:drawableTop="@drawable/gong"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="公益" />
        <TextView
            android:id="@+id/textVie5"
            android:textSize="10sp"
            android:drawableTop="@drawable/cai"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="彩票" />
    </LinearLayout>
</LinearLayout>
